
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Nueva</title>
	<link href="~/Estilos/Estilo.css" rel="stylesheet" />
</head>
<body style="margin:0px">
    <div id="divPrincipal"> 
		<table>
			<tr class="Titulo">
				<td colspan="5">Demo 14: Cabecera - Detalle</td>
			</tr>
			<tr class="Subtitulo">
				<td colspan="5">Creacion de Nueva Orden</td>
			</tr>
			<tr>
				<td style="width:15%">Nro Orden</td>
				<td style="width:85%" colspan="4"></td>
			</tr>
			<tr>
				<td style="width:15%">
					<input id="txtIdOrden" type="text" style="width:50px" />
				</td>
				<td style="width:85%" colspan="4"></td>
			</tr>
			<tr>
				<td style="width:15%">Id Empleado</td>
				<td style="width:40%">Apellido del Empleado</td>
				<td style="width:30%" colspan="2">Nombre del Empleado</td>
				<td style="width:15%"></td>
			</tr>
			<tr>
				<td>
					<input id="txtIdEmpleado" type="text" style="width:50px;" />
					<input id="btnBuscarEmpleado" type="button" value="..." style="cursor:pointer" title="Buscar Empleado" />
				</td>
				<td>
					<input id="txtApeEmpleado" type="text" style="width:250px;" readonly="readonly" />
				</td>
				<td colspan="2">
					<input id="txtNomEmpleado" type="text" style="width:250px;" readonly="readonly" />
				</td>
			</tr>
			<tr>
				<td style="width:15%">Id Cliente</td>
				<td style="width:40%">Nombre del cliente</td>
				<td style="width:30%">Direccion del cliente</td>
			</tr>
			<tr>
				<td>
					<input id="txtIdCliente" type="text" style="width:50px;" />
					<input id="btnBuscarCliente" type="button" value="..." style="cursor:pointer" title="Buscar Cliente" />
				</td>
				<td>
					<input id="txtNomCliente" type="text" style="width:250px;" readonly="readonly" />
				</td>
				<td colspan="2">
					<input id="txtDirCliente" type="text" style="width:250px;" readonly="readonly" />
				</td>
				<td></td>
			</tr>
			<tr>
				<td colspan="5">
					<span id="spnMensajeOrden" style="font-weight:bold; color:orangered;" ></span>
				</td>
			</tr>
			<tr>
				<td style="text-align:center" colspan="5">
					<input type="button" id="btnGrabar" value="Grabar" class="boton" style="width:100px" />
					<input type="button" id="btnImprimir" value="Imprimir"  class="boton" style="width:100px;  "/>
				</td>
			</tr>
			<tr>
				<td colspan="5">
					<table>
						<thead>
							<tr class="FilaCabecera" style="font-weight:bold; text-align:center">
								<th style="width:5%">
									<img id="imgNuevo" src="~/Imagenes/Nuevo.png" width="20" height="20" alt="" title="Agregar Detalle" style="cursor:pointer" />
								</th>
								<th style="width:15%">Id Producto</th>
								<th style="width:30%">Descripcion Producto</th>
								<th style="width:15%">Precio Unitario</th>
								<th style="width:15%">Cantidad</th>
								<th style="width:15%">Precio Total</th>
								<th style="width:5%"></th>
							</tr>
						</thead>
						<tbody id="tbDetalle"></tbody>
						<tfoot id="tfDetalle" style="text-align:right; font-weight:bold">
							<tr>
								<td colspan="5"> Total de la Orden: </td>
								<td id="tbTotal" class="FilaCabecera"></td>
							</tr>
						</tfoot>
					</table>
				</td>
			</tr>
		</table>
    </div>
	<div id="divPopup" style="position:absolute; left:0; top:0; width:100%; height:100%; background-color:transparent;display:none;">
		<div id="divBusqueda" style="position:absolute; left:20%; top:20%; width:60%; height:60%; background-color:white">
			<table>
				<tr>
					<td style="width:95%; background-color:blue; color:white;">
						<span id="spnTitulo" style="font-weight:bold"></span>
					</td>
					<td>
						<img id="imgCerrar" src="~/Imagenes/Eliminar.png" width="30" height="30" alt="" title="Cerrar Ventana" style="cursor:pointer" />
					</td>
				</tr>
			</table>
			<table>
				<tr class="Subtitulo">
					<td><span id="spnSubtitulo"></span></td>
				</tr>
				<tr>
					<td><span id="spnMensaje" style="color:red;font-weight:bold"></span></td>
				</tr>
				<tr>
					<div id="divTabla"></div>
				</tr>
				<tr>
					<td style="text-align:center;">
						<div id="divPagina" ></div>
					</td>
				</tr>
			</table>
		</div>
	</div>
	<script src="~/Script/NuevaOrden.js"></script>
</body>
</html>
